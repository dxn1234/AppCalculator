<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:layout_height="match_parent">
    <TableRow>
        <EditText
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:background="@android:color/black"
            android:layout_span="4"
            android:editable="false"
            android:id="@+id/edt_ketqua"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            />

    </TableRow>
    <TextView
        android:gravity="center"
        android:textSize="25sp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:id="@+id/tv_ketqua"
        />
    <TableRow>
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_ac"
            android:text="AC"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_phanso"
            android:text="+/-"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_phantram"
            android:text="%"
            />
        <Button
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="/"
            android:id="@+id/btn_chia"
            />
    </TableRow>
    <TableRow>
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_7"
            android:text="7"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_8"
            android:text="8"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_9"
            android:text="9"
            />
        <Button
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_nhan"
            android:text="x"
            />
    </TableRow>
    <TableRow>
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_4"
            android:text="4"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_5"
            android:text="5"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_6"
            android:text="6"
            />
        <Button
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_tru"
            android:text="-"
            />
    </TableRow>
    <TableRow>
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_1"
            android:text="1"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_2"
            android:text="2"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_3"
            android:text="3"
            />
        <Button
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_cong"
            android:text="+"
            />
    </TableRow>
    <TableRow>
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_span="2"
            android:id="@+id/btn_0"
            android:text="0"
            />
        <Button
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_cham"
            android:text="."
            />
        <Button
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_bang"
            android:text="="
            />
    </TableRow>
</TableLayout>